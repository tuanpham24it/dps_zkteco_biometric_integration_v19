<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="zkteco_device_users_list_view" model="ir.ui.view">
        <field name="name">zkteco.attendance.machine.tree</field>
        <field name="model">zkteco.attendance.machine</field>
        <field name="arch" type="xml">
            <list string="ZKTeco Device Users" create="false">
                <field name="zkteco_device_attend_id"/>
                <field name="zkteco_device_username"/>
                <field name="employee_id"/>
                <field name="device_id"/>
            </list>
        </field>
    </record>

    <record id="view_zkteco_device_users_form" model="ir.ui.view">
        <field name="name">zkteco.attendance.machine.form</field>
        <field name="model">zkteco.attendance.machine</field>
        <field name="arch" type="xml">
            <form string="Device User">
                <sheet>
                    <group>
                        <field name="zkteco_device_attend_id"/>
                        <field name="zkteco_device_username"/>
                        <field name="employee_id"/>
                        <field name="device_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_zkteco_device_users" model="ir.actions.act_window">
        <field name="name">ZKTeco Device User</field>
        <field name="res_model">zkteco.attendance.machine</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>